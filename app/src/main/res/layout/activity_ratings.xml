<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ratings"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gap22.shoppit.RatingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/groceriesdark">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvProductID"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="@color/colorPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar3"
                style="@android:style/Widget.DeviceDefault.RatingBar"
                android:numStars="5"
                android:isIndicator="true"
                android:theme="@style/RatingBar" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="You say:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@color/colorPrimary" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                style="@android:style/Widget.DeviceDefault.RatingBar"
                android:numStars="5"
                android:theme="@style/RatingBar" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Value for Money"
                        android:id="@+id/textView4"
                        android:textColor="@color/colorPrimary" />

                    <RadioGroup android:id="@+id/rgValueForMoney"
                        android:orientation="horizontal">

                        <RadioButton
                        android:text="Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton4"
                            android:textColor="@color/colorPrimary" />

                        <RadioButton
                            android:text="Bad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton3"
                            android:textColor="@color/colorPrimary" />

                    </RadioGroup>

                </TableRow>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Quality"
                        android:id="@+id/textView3"
                        android:textColor="@color/colorPrimary" />

                    <RadioGroup android:id="@+id/rgQuality"
                        android:orientation="horizontal">

                        <RadioButton
                        android:text="Good"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton"
                            android:textColor="@color/colorPrimary" />

                        <RadioButton
                            android:text="Bad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton2"
                            android:textColor="@color/colorPrimary" />

                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="Save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button2"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:onClick="btnSaveClick"/>

                    <Button
                        android:text="Scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnScan"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:onClick="btnScanClick"/>
                </TableRow>
            </TableLayout>
        </TableRow>

    </TableLayout>

</RelativeLayout>
